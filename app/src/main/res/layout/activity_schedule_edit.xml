<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/schedule_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/gradient_bg"
        android:focusableInTouchMode="true"
        tools:context=".ScheduleEditActivity"
        tools:layout_editor_absoluteY="25dp">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/schedule_edit_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:theme="@style/CustomToolBar"
            app:layout_constraintBottom_toBottomOf="@id/group_shifts"
            app:layout_constraintStart_toStartOf="parent"
            />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/group_shifts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:elevation="@dimen/elevation_high"
            android:outlineProvider="bounds"
            android:scrollbars="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/schedule_edit_toolbar"
            app:layout_constraintBottom_toTopOf="@id/cancel_schedule_update_button"
            />

        <com.venmo.view.TooltipView
            android:id="@+id/schedule_edit_shifts_tooltip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:text="@string/schedule_tooltip"
            android:visibility="invisible"
            android:textColor="@android:color/white"
            app:anchoredView="@id/group_shifts"
            app:arrowAlignment="end"
            app:arrowAlignmentOffset="32dp"
            app:arrowLocation="bottom"
            app:cornerRadius="16dp"
            app:tooltipColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/schedule_edit_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            />

        <Button
            android:id="@+id/save_schedule_update_button"
            style="@style/CustomButton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="@dimen/button_margin"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"
            android:text="@string/save"
            app:layout_constraintTop_toBottomOf="@id/group_shifts"
            app:layout_constraintEnd_toEndOf="parent"

            />

        <Button
            android:id="@+id/cancel_schedule_update_button"
            style="@style/CustomButton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="@dimen/button_margin"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"
            android:text="@string/cancel"
            app:layout_constraintTop_toBottomOf="@id/group_shifts"
            app:layout_constraintStart_toStartOf="parent"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>