<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_schedule_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScheduleViewActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/schedule_view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:theme="@style/CustomToolBar"
        app:layout_constraintBottom_toTopOf="@id/fragment_container"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/tt"
        app:layout_constraintTop_toBottomOf="@id/schedule_view_toolbar" />

    <View
        android:id="@+id/tt"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/shadow_btt"
        app:layout_constraintBottom_toTopOf="@id/navigation"
        app:layout_constraintTop_toBottomOf="@id/fragment_container" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btb_bg"
        app:itemIconTint="@color/bnv_tab_item_foreground"
        app:itemTextColor="@color/bnv_tab_item_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tt"
        app:menu="@menu/navigation" />

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/options_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        fab:fab_colorNormal="@color/orange_color_light"
        fab:fab_colorPressed="@color/dark_orange_color"
        android:background="@android:color/white"
        android:visibility="invisible"
        app:fab_icon="@drawable/ic_edit_timeslots_fab"
        fab:fab_addButtonSize="normal"
        fab:fab_title="Edit options" />

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/schedule_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        fab:fab_colorNormal="@color/orange_color_light"
        fab:fab_colorPressed="@color/dark_orange_color"
        android:background="@android:color/white"
        android:visibility="invisible"
        app:fab_icon="@drawable/ic_generate_schedule_fab"
        fab:fab_addButtonSize="normal"
        fab:fab_title="Generate schedule" />

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/copy_group_code_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toTopOf="@id/schedule_fab"
        app:layout_constraintEnd_toEndOf="parent"
        fab:fab_colorNormal="@color/orange_color_light"
        fab:fab_colorPressed="@color/dark_orange_color"
        android:background="@android:color/white"
        android:visibility="invisible"
        app:fab_icon="@drawable/ic_copy_to_clipboard"
        fab:fab_addButtonSize="normal"
        fab:fab_title="Copy group code" />

</android.support.constraint.ConstraintLayout>