<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:id="@+id/weekly_view_cv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.alamkanak.weekview.WeekView
        android:id="@+id/weekView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:eventTextColor="@android:color/white"
        app:eventTextSize="12sp"
        app:textSize="12sp"
        app:hourHeight="60dp"
        app:todayHeaderTextColor="#FFFFFF"
        app:hourSeparatorColor="@color/colorPrimary"
        app:headerColumnPadding="18dp"
        app:headerColumnTextColor="#FFFFFF"
        app:firstDayOfWeek="sunday"
        app:columnGap="1dp"
        app:dayNameLength="length_short"
        app:noOfVisibleDays="7"
        app:headerRowBackgroundColor="@color/colorPrimary"
        app:dayBackgroundColor="#FFFFFF"
        app:headerColumnBackground="#ffffffff"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/timeslots_fab"
        android:clickable="true"
        app:fabSize="normal"
        app:backgroundTint="@color/orange_color"
        app:srcCompat="@drawable/ic_join_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:focusable="true" />

</android.support.constraint.ConstraintLayout>