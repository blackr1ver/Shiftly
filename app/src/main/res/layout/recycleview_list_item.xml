<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/list_item"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:background="#FFFFFF"
android:onClick="onClick"
android:clickable="true"
android:focusable="true"
android:focusableInTouchMode="true">
    <ImageView
        android:id="@+id/group_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/baseline_alternate_email_black_18"
        android:padding="16dp"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_toRightOf="@id/group_image"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/group_image" />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/group_count"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/group_name"
        android:layout_toRightOf="@id/group_image"
        android:layout_toEndOf="@id/group_image" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_orange_color"
        android:layout_below="@id/group_image" />
    <ImageView
        android:id="@+id/group_goto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/baseline_lock_black_18"
        android:padding="16dp"
        android:layout_alignParentEnd="true" />
</RelativeLayout>