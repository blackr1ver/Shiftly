<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">@font/helvetica_neue</item>
        <item name="android:layoutDirection" tools:ignore="NewApi">ltr</item>
        <item name="buttonStyle">@style/CustomButton</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/primary_text_dark</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:colorBackground">@color/background_color</item>
        <item name="android:textColorSecondary">@color/text_color_primary</item>
        <item name="android:textColorSecondaryInverse">@color/secondary_text_material_dark</item>
    </style>

    <style name="SplashScreen" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="CustomEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:typeface">sans</item>
        <item name="android:layout_height">@dimen/edittext_height</item>
        <item name="android:fontFamily">@font/helvetica_neue</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimaryLight</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/edittext_elevation</item>
        <item name="android:textAlignment" tools:ignore="NewApi">center</item>
        <item name="android:layout_margin">@dimen/edittext_margin</item>
        <item name="android:layout_marginStart">@dimen/edittext_margin</item>
        <item name="android:layout_marginLeft">@dimen/edittext_margin</item>
        <item name="android:layout_marginTop">@dimen/edittext_margin</item>
        <item name="android:layout_marginEnd">@dimen/edittext_margin</item>
        <item name="android:layout_marginRight">@dimen/edittext_margin</item>
        <item name="android:layout_marginBottom">@dimen/edittext_margin</item>
        <item name="android:paddingStart">@dimen/edittext_padding_left</item>
        <item name="android:paddingLeft">@dimen/edittext_padding_left</item>
        <item name="android:paddingRight">@dimen/edittext_padding_right</item>
        <item name="android:paddingEnd">@dimen/edittext_padding_right</item>
        <item name="android:ems">@integer/edittxt_ems</item>
    </style>

    <style name="CustomButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:fontFamily">@font/helvetica_neue</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/button_elevation</item>
        <item name="android:paddingStart">@dimen/button_left_padding</item>
        <item name="android:paddingLeft">@dimen/button_left_padding</item>
        <item name="android:paddingEnd">@dimen/button_right_padding</item>
        <item name="android:paddingRight">@dimen/button_right_padding</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">@dimen/button_width</item>
    </style>

    <style name="CustomToolBar" parent="Theme.AppCompat">
        <item name="android:background">@drawable/rounded_toolbar</item>
        <item name="fontFamily">@font/helvetica_neue</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MainToolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/toolbar_elevation_size</item>
        <item name="android:titleTextStyle">@style/ToolbarTitleAppearance</item>
    </style>

    <style name="ToolbarTitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="fontFamily">@font/helvetica_neue</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="CustomCheckBox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="fontFamily">@font/helvetica_neue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment" tools:ignore="NewApi">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="fontFamily">@font/helvetica_neue</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:typeface">normal</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="CustomTextViewTitle" parent="@style/TextAppearance.AppCompat">
        <item name="fontFamily">@font/helvetica_neue</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:layout_marginTop">@dimen/text_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/text_margin_bottom</item>
        <item name="android:textAlignment" tools:ignore="NewApi">center</item>
        <item name="android:textSize">@dimen/text_title_size</item>
    </style>

    <style name="CustomTextView" parent="@style/TextAppearance.AppCompat">
        <item name="fontFamily">@font/helvetica_neue</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:layout_marginTop">@dimen/text_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/text_margin_bottom</item>
        <item name="android:textAlignment" tools:ignore="NewApi">center</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    y

    <style name="ListTextView">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>

    </style>

    <style name="ListItemView">
        <item name="android:background">@drawable/list_item_bg</item>
        <item name="android:paddingTop">@dimen/list_item_padding</item>
        <item name="android:paddingBottom">@dimen/list_item_padding</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="TabLayout">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/tab_elevation_size</item>
        <item name="tabTextColor">@color/tablayout_unselected</item>
        <item name="tabSelectedTextColor">@color/tablayout_selected</item>
    </style>

    <style name="FAB">
        <item name="android:layout_marginEnd">@dimen/fab_margin_size</item>
        <item name="android:layout_marginRight">@dimen/fab_margin_size</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin_size</item>
        <item name="android:tint">@android:color/white</item>
    </style>

</resources>
