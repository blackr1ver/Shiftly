<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">@font/helvetica_neue</item>
        <item name="android:layoutDirection">ltr</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="buttonStyle">@style/CustomButton</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/primary_text_dark</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:colorBackground">@color/background_color</item>
        <item name="android:textColorSecondary">@color/text_color_primary</item>
        <item name="android:textColorSecondaryInverse">@color/secondary_text_material_dark</item>
    </style>

    <style name="SplashScreen" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="CustomEditText">
        <item name="android:typeface">sans</item>
        <item name="android:fontFamily">@font/helvetica_neue</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimaryLight</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="CustomButton">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:fontFamily">@font/helvetica_neue</item>
        <item name="android:textSize">22sp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:paddingStart">@dimen/button_left_padding</item>
        <item name="android:paddingLeft">@dimen/button_left_padding</item>
        <item name="android:paddingEnd">@dimen/button_right_padding</item>
        <item name="android:paddingRight">@dimen/button_right_padding</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/helvetica_neue</item>
    </style>

    <style name="CustomToolBar">
        <item name="android:background">@null</item>
        <item name="fontFamily">@font/helvetica_neue</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="fontFamily">@font/helvetica_neue</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:typeface">normal</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="CustomImageButton">
        <item name="android:background">@null</item>
    </style>

    <style name="CustomTextViewTitle">
        <item name="fontFamily">@font/helvetica_neue</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:layout_marginTop">@dimen/text_marginTop</item>
        <item name="android:layout_marginBottom">@dimen/text_marginBottom</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_title_size</item>
    </style>

    <style name="CustomTextView">
        <item name="fontFamily">@font/helvetica_neue</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:layout_marginTop">@dimen/text_marginTop</item>
        <item name="android:layout_marginBottom">@dimen/text_marginBottom</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="ListTextView">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>

    </style>

    <style name="ListItemView">
        <item name="android:paddingBottom">@dimen/list_item_padding</item>
        <item name="android:paddingTop">@dimen/list_item_padding</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MainToolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:elevation">@dimen/toolbar_elevation_size</item>
    </style>

    <style name="TabLayout">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:elevation">@dimen/tab_elevation_size</item>
    </style>

    <style name="FAB">
        <item name="android:layout_marginEnd">@dimen/fab_margin_size</item>
        <item name="android:layout_marginRight">@dimen/fab_margin_size</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin_size</item>
        <item name="android:tint">@android:color/white</item>

    </style>
</resources>
