<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
package="com.technion.shiftly">

<application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity
        android:name="com.technion.shiftly.LoginActivity"
        android:theme="@style/SplashScreen">
    </activity>
    <activity
        android:name="com.technion.shiftly.SignupActivity"
        android:windowSoftInputMode="adjustPan">
    </activity>
    <activity android:name="com.technion.shiftly.TimeslotsConfigActivity">
    </activity>
    <activity android:name="com.technion.shiftly.GroupCreationActivity">
        android:label="@string/group_create"
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
    <activity android:name=".GroupListsActivity">
    </activity>

</application>
<supports-screens android:largeScreens="true"
    android:normalScreens="true" android:smallScreens="true"
    android:anyDensity="true" />
</manifest>